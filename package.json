{
  "name": "@magister_zito/eslint-config-collection",
  "version": "0.0.1",
  "description": "Shared eslint configurations",
  "license": "MIT",
  "author": "Matthew Zito <matthewtzito@gmail.com> (goldmund)",
  "main": "index.js",
  "private": true,
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --fix",
