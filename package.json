    "release": "pnpm lint && pnpm format && lerna publish --conventional-commits"
  },
  "devDependencies": {
    "@magister_zito/eslint-config": "*",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "8.3.0",
    "lerna": "^4.0.0",
    "prettier": "2.5.0",
    "typescript": "^4.5.2"
  }
}
